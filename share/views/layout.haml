%head
  %meta(name="viewport" content="width=device-width, initial-scale=1.0")

  %link{:rel => "icon", :type => "image/gif", :href => "/favicon.gif"}/

  %title= $title || "Genome Scout"
  - record_css '/stylesheets/app'

  - record_css '/plugins/zurb-icons/foundation_icons_general/stylesheets/general_foundicons.css'


  - %w(jquery-1.8.0.min jquery.cookie jquery.form).each do |jquery_file|
    - record_js File.join('/plugins/jquery/js/', jquery_file)

  - record_js '/plugins/zurb-responsive-tables/js/responsive-tables'
  - record_css '/plugins/zurb-responsive-tables/stylesheets/responsive-tables.css'

  -# record_js File.join('/plugins/jquery-ui/js/', 'jquery-ui-1.8.14.custom.min')

  -# %w(jquery.event.swipe jquery.foundation.clearing jquery.foundation.mediaQueryToggle jquery.foundation.tabs jquery.offcanvas index jquery.foundation.accordion jquery.foundation.forms jquery.foundation.navigation jquery.foundation.tooltips jquery.placeholder jquery.cookie jquery.foundation.alerts jquery.foundation.joyride jquery.foundation.orbit jquery.foundation.topbar modernizr.foundation jquery.event.move jquery.foundation.buttons jquery.foundation.reveal).each do |file|
  - %w(jquery.foundation.mediaQueryToggle jquery.offcanvas jquery.foundation.accordion jquery.foundation.forms jquery.cookie jquery.foundation.topbar modernizr.foundation jquery.event.move jquery.foundation.buttons).each do |file|
    - record_js "/js/#{ file }"

  - %w(_foundation helpers _ajax_replace _dom_update base entities favourites offcanvas actions app).each do |file|
    - record_js "/js/#{ file }"


  = serve_css

%body

  #header
    = partial_render('layout/header')

  #body
    = yield

