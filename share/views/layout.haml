!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %title= $title || "StudyExplorer"
    - record_css '/stylesheets/app'

    - record_js '/plugins/jquery/js/jquery-1.8.0.min'

    - %w(jquery.event.swipe jquery.foundation.clearing jquery.foundation.mediaQueryToggle jquery.foundation.tabs jquery.offcanvas index jquery.foundation.accordion jquery.foundation.forms jquery.foundation.navigation jquery.foundation.tooltips jquery.placeholder jquery.cookie jquery.foundation.alerts jquery.foundation.joyride jquery.foundation.orbit jquery.foundation.topbar modernizr.foundation jquery.event.move jquery.foundation.buttons jquery.foundation.magellan jquery.foundation.reveal).each do |file|
      - record_js "/js/#{ file }"

    - %w(_foundation helpers base app).each do |file|
      - record_js "/js/#{ file }"


    = serve_css
  %body.off-canvas
    #header
      = partial_render('header')

    #body
      = yield

    #footer

    #coda
      = serve_js
