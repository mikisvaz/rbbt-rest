%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en", 'xml:lang' => "en" }
  %head
    %title= $title || "StudyExplorer"
    - record_css '/stylesheets/app'

    - record_js '/plugins/jquery/js/jquery-1.8.0.min'

    - %w(base app).each do |file|
      - record_js "/js/#{ file }"

    = serve_css
  %body
    = yield

    = serve_js
