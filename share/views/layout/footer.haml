:sass

  #footer
    clear: both

    border: none !important
    padding: 0px !important
    margin: 0px !important
    .card
      width: 100%
      height: 100%
    .contact
      &:before
        content: "Contact: "
        font-weight: bold
      span.where:before
        content: " at "
    .image 
      font-size: 0px
      width: 241px 
    .content
      width: calc(100% - 241px -8px)
    .image, .content
      //float: left
      display: inline-block
      margin-left: 8px

    .ui.segment
      &:after
        content: " "
        display:inline-block
        float:left
        clear:both

.ui.segment
  .image
    %a(href="http://www.cnio.es/")
      %img(src="http://www.cnio.es/img/comunes/header/cnio.gif" height='115px' width='241px')
  .content
    .ui.header
      CNIO. Centro Nacional de Investigaciones Oncologicas (Spanish National Cancer Research Center)
    .description
      %br/
      %span.group Structural Computational Biology Group
      %br/
      %span.address   C/ Melchor Fernandez Almagro, 3, E-28029 Madrid
    .meta.contact
      %span.who miguel.vazquez
      %span.where cnio.es
