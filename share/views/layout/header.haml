%nav.top-bar

  %ul
    %li.name
      %a(href="#" onclick='void(0);')= $title || "Genome Explorer"

    %li.toggle-topbar(href="#")
      %a(href="#")

  %section

    %ul.left
      %li
        %a#reload_page(href="#")
          %i.general.foundicon-refresh.hide-for-small
          %span.show-for-small
            Reload


      - if user and defined? @entity
        - entity = @entity
        %li#top-add-favourite
          %a#add_favourite(href="#" entity="#{entity}" entity_type="#{entity.base_type}" entity_info="#{entity.entity_link_params.to_json}")
            %i.general.foundicon-star.hide-for-small
            %span.show-for-small
              Add to Favourites

        %li.divider
 
        = partial_render('layout/favourites')
